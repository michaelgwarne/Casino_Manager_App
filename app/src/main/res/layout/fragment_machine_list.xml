<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MachineAlertsListFragment"

    android:scrollIndicators="right">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Machine ID:"
        android:id="@+id/machine_id_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:paddingEnd="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/machine_id"
        android:layout_toRightOf="@id/machine_id_text"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status:"
        android:id="@+id/machine_status_text"
        android:layout_below="@id/machine_id_text"
        android:textSize="20sp"
        android:paddingEnd="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/machine_status"
        android:layout_below="@id/machine_id"
        android:layout_toRightOf="@+id/machine_status_text"
        android:textSize="20sp" />
</RelativeLayout>
